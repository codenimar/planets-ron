# Backend API .htaccess Configuration

# Security Headers
<IfModule mod_headers.c>
    # Prevent clickjacking
    Header set X-Frame-Options "SAMEORIGIN"
    
    # XSS Protection
    Header set X-XSS-Protection "1; mode=block"
    
    # Prevent MIME type sniffing
    Header set X-Content-Type-Options "nosniff"
    
    # Referrer Policy
    Header set Referrer-Policy "strict-origin-when-cross-origin"
</IfModule>

# Deny access to log files
<Files "wallet_logins.log">
    Order allow,deny
    Deny from all
</Files>

# Deny direct access to session management utility
# (It should only be included by other PHP files)
<Files "session.php">
    Order allow,deny
    Deny from all
</Files>

# Deny access to .env files
<Files ".env">
    Order allow,deny
    Deny from all
</Files>

<Files ".env.example">
    Order allow,deny
    Deny from all
</Files>

# Prevent directory listing
Options -Indexes

# Enable PHP session settings
<IfModule mod_php.c>
    php_flag session.cookie_httponly On
    php_flag session.use_strict_mode On
    php_flag session.use_only_cookies On
</IfModule>

# Rewrite rules for clean URLs (optional)
<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /api/
    
    # If the request is for a PHP file and it exists, serve it
    RewriteCond %{REQUEST_FILENAME} -f
    RewriteRule ^(.+)\.php$ $1.php [L]
</IfModule>
